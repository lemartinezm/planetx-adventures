---
import { travelFrom, campingSpotsData } from "../../lib/data";
---

<form class="reservation-form">
  <div class="form-input-container">
    <label class="form-label" for="name">Name</label>
    <input class="form-input" type="text" name="name" id="name" />
  </div>
  <div class="form-input-container">
    <label class="form-label" for="reservation-date">Date of Departure</label>
    <input
      class="form-input"
      type="date"
      name="reservation-date"
      id="reservation-date"
    />
  </div>
  <div class="form-input-container">
    <label class="form-label" for="travel-to">Camp</label>
    <select class="form-input" name="travel-to" id="travel-to">
      {
        campingSpotsData.map((item) => (
          <option value={item.stationCode}>{item.campName}</option>
        ))
      }
    </select>
  </div>
  <div class="form-input-container">
    <label class="form-label" for="travel-from">From</label>
    <select class="form-input" name="travel-from" id="travel-from">
      {
        travelFrom.map((item) => (
          <option value={item.stationCode}>{item.place}</option>
        ))
      }
    </select>
  </div>
</form>

<style>
  .reservation-title {
    color: var(--white);
    font-size: 1.5rem;
    font-weight: 500;
  }

  .reservation-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    background-color: var(--black);
    width: 100%;
    padding: 1rem;
    border-radius: 2rem;
  }

  .form-input-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    width: 100%;
  }

  .form-label {
    color: var(--white);
  }

  .form-input {
    background-color: transparent;
    border: 1px solid var(--black-25);
    border-radius: 2rem;
    padding: 0.5rem 1rem;
    font-size: 1rem;
    color: var(--white);
  }
</style>
