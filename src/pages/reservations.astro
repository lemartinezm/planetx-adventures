---
import Footer from "../components/footer/Footer.astro";
import Layout from "../layouts/Layout.astro";
import ReservationForm from "../components/reservationForm/ReservationForm.astro";
import Ticket from "../components/ticket/Ticket.astro";
import Stepper from "../components/stepper/Stepper.astro";
import SeatsSelection from "../components/seatsSelection/SeatsSelection.astro";
---

<Layout title="Welcome to Astro.">
  <main class="reservation-container">
    <a href="/" class="go-back-button">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 256 256"
        ><path
          fill="currentColor"
          d="M224 128a8 8 0 0 1-8 8H59.31l58.35 58.34a8 8 0 0 1-11.32 11.32l-72-72a8 8 0 0 1 0-11.32l72-72a8 8 0 0 1 11.32 11.32L59.31 120H216a8 8 0 0 1 8 8Z"
        ></path>
      </svg>
      <span>Back</span>
    </a>
    <h2 class="reservation-title">Make a Reservation</h2>
    <Stepper />
    <!-- <ReservationForm /> -->
    <!-- <SeatsSelection /> -->
    <!-- <Ticket /> -->
    <!-- TODO: terminar esto (estilos) y logica para que cambie el color del stepper -->
  </main>
</Layout>

<style>
  .reservation-container {
    /* background-image: url("../assets/background-reservations.jpg"); */
    background-color: var(--dark-blue);
    background-size: cover;
    background-repeat: no-repeat;
    min-height: 100vh;
    background-position: center;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .go-back-button {
    color: var(--white);
    margin: 1rem;
    border-radius: 2rem;
    width: fit-content;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .reservation-title {
    color: var(--white);
    padding: 0 1rem;
  }
</style>
